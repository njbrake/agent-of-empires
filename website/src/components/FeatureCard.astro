---
interface Props {
  title: string;
  description: string;
  icon: string;
  tint?: 'brand' | 'accent' | 'green';
}

const { title, description, icon, tint } = Astro.props;

const icons: Record<string, string> = {
  dashboard: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"/>',
  worktrees: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17V7m0 10a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h2a2 2 0 012 2m0 10a2 2 0 002 2h2a2 2 0 002-2M9 7a2 2 0 012-2h2a2 2 0 012 2m0 10V7m0 10a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 00-2-2h-2a2 2 0 00-2 2"/>',
  docker: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"/>',
  status: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>',
  groups: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>',
  tmux: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>',
};

const tintClass = tint ? `feature-tint-${tint}` : '';

const iconColorMap: Record<string, string> = {
  brand: 'text-brand-500',
  accent: 'text-accent-400',
  green: 'text-emerald-400',
};
const iconBgMap: Record<string, string> = {
  brand: 'bg-brand-600/15',
  accent: 'bg-accent-500/15',
  green: 'bg-emerald-500/15',
};

const iconColor = tint ? iconColorMap[tint] : 'text-brand-500';
const iconBg = tint ? iconBgMap[tint] : 'bg-brand-600/15';
---

<div class={`feature-card rounded-2xl p-8 animate-on-scroll ${tintClass}`}>
  <div class={`w-14 h-14 ${iconBg} rounded-xl flex items-center justify-center mb-5`}>
    <svg class={`w-7 h-7 ${iconColor}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <Fragment set:html={icons[icon]} />
    </svg>
  </div>
  <h3 class="text-xl font-semibold mb-3">{title}</h3>
  <p class="text-gray-300 leading-relaxed">{description}</p>
</div>
