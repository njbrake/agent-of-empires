---

<section class="py-16 px-6 animate-on-scroll">
  <div class="max-w-4xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12">
      {items.map((item) => (
        <div class="flex flex-col items-center text-center">
          <div class="w-12 h-12 rounded-xl bg-surface-800 border border-surface-700/50 flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-accent-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <Fragment set:html={item.icon} />
            </svg>
          </div>
          <h3 class="text-white font-semibold mb-1">{item.title}</h3>
          <p class="text-gray-400 text-sm">{item.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
